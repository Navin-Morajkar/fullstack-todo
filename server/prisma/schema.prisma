generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  status      String   @default("To Do") // Default status
  createdAt   DateTime @default(now())
}